#include "demo.h"

demo_t demo, demo2;
demo_t *pdemo, *pdemo2;

void cam_R_initial(void);
void cam_L_initial(void);

int main() {
	//delay(1000);

	xil_printf("\n\r");
	xil_printf("------------------------------------------------------\n\r");
	xil_printf("--                    FMC-IMAGEON                   --\n\r");
	xil_printf("--               Getting Started Design             --\n\r");
	xil_printf("------------------------------------------------------\n\r");
	xil_printf("\n\r");

	cam_R_initial();
	cam_L_initial();

	getchar();

	return 0;
}

void cam_R_initial(void) {
	pdemo = &demo;
	demo_init_R( pdemo );

	// Try CAM first
	pdemo->cam_alpha = 0xFF;
	pdemo->hdmi_alpha = 0x00;
	demo_start_cam_R_in(pdemo);
}

void cam_L_initial(void) {
	pdemo2 = &demo2;
	demo_init_L( pdemo2 );

	// Try CAM first
	pdemo2->cam_alpha = 0xFF;
	pdemo2->hdmi_alpha = 0x00;
	demo_start_cam_L_in(pdemo2);
}
